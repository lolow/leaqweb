<% content_for :title, "New technology" %>

<div class="grid_4">
<%= form_for(@technology) do |f| %>
  <%= render "shared/error_messages", :target => @technology %> 
  <fieldset class="login">
    <legend>Technology</legend>
    <p class="notice">Enter the following information.</p>
    <p> <%= f.label :name, 'Name:' %><%= f.text_field :name %></p>
    <%= f.submit 'Create', :class => "confirm button" %>
  </fieldset>
<% end %>
</div>
<div class="clear"></div>