.grid_3
  = render :partial => 'shortcuts', :locals => { :page => :new }
.grid_6
  .box
    %h2 New Technology
    .block
      = form_for(@technology) do |f|
        = render "shared/error_messages", :target => @technology
        %p
          = f.label :name
          = f.text_field :name
        %p
          = f.label :set_list, 'Sets'
          = f.select :set_list, %w{P P,DMD}, {:include_blank => true}
        %p
          = f.submit 'Create', :class => "confirm button"
          = f.hidden_field :description, :value => ""
.clear