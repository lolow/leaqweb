.box
  .block(id="action")
    %p 
      - unless page == :index
        = link_to 'Browse', technologies_path, :class => "action"
      - unless page == :new
        = link_to 'New', new_technology_path, :class => "action"
      - if page == :edit
        = link_to 'Duplicate', duplicate_technology_path, :confirm => 'Are you sure?', :method => :post, :class => "action"
        = link_to 'Delete', @technology, :confirm => 'Are you sure?', :method => :delete, :class => "action"