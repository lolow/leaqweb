<!DOCTYPE html>
%html
  = render 'layouts/head'
  %body
    .container_12
      = render 'layouts/header'
      = render 'layouts/menu'
      - [:alert, :notice].each do |type|
        - if flash[type]
          .grid_2
            .block
          .grid_8
            %div(class=type)
              = flash[type]
          .clear

      = yield

      = render 'layouts/footer'
