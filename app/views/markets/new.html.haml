.grid_3
  = render :partial => 'shortcuts', :locals => { :page => :new }
.grid_6
  .box
    %h2 New query
    .block
      = form_for(@market) do |f|
        = render "shared/error_messages", :target => @market
        %fieldset
          %p
            = f.label :name
            = f.text_field :name
          %p
            = f.label :description
            = f.text_field :description
          = f.submit 'Create', :class => "confirm button"
.clear