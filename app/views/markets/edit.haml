  = render :partial => 'shortcuts', :locals => { :page => :edit }

.grid_9
  .box
    %h2 Market
    .block
      =simple_form_for @market do |f|
        =f.input :name
        =f.input :description, :input_html => {:rows => 2}
        =f.input :set_list, :as => :hidden, :input_html => {:value => "MARKET"}
        =f.association :technologies
        =f.button :submit
.clear
