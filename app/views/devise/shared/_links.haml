.box(id="action")
  %h2 Actions
  %br
  %p
    - if controller_name != 'sessions'
      = link_to "Sign in", new_session_path(resource_name), :class => "action sign_in"
      %br
    - if devise_mapping.registerable? && controller_name != 'registrations'
      = link_to "Sign up", new_registration_path(resource_name), :class => "action sign_up"
      %br
    - if devise_mapping.recoverable? && controller_name != 'passwords'
      = link_to "Forgot your password?", new_password_path(resource_name), :class => "action"
      %br
    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      = link_to "Receive confirmation instructions?", new_confirmation_path(resource_name), :class => "action"
      %br
    - if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
      = link_to "Receive unlock instructions?", new_unlock_path(resource_name), :class => "action"