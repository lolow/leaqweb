- content_for :title, "Sign up"
.grid_3
  = render :partial => "devise/shared/links"
.grid_9
  .box
    %h2 Information
    .block
      = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        = devise_error_messages!
        = f.input :email
        = f.input :password
        = f.input :password_confirmation
        = f.submit "Sign up"
.clear