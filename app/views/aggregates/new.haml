.grid_2
  .box(class="action")
    %h2 Actions
    %br
    %p= link_to 'Browse all', aggregates_path, :class => "action browse"

.grid_10
  .box
    %h2 New Aggregate
    .block
      =simple_form_for @aggregate do |f|
        =f.input :name
        =f.input :description, :input_html => {:rows => 2}
        =f.input :set_list, :as => :hidden, :input_html => {:value => "AGG"}
        =f.button :submit, :class => "aligned"
.clear