.grid_2
  %div(class="box action")
    %h2 Actions
    %br
    %p= link_to 'Browse all', commodity_sets_path, :class => "action browse"

.grid_10
  .box
    %h2 New CommoditySet
    .block
      =simple_form_for @commodity_set do |f|
        =f.input :name
        =f.input :description, :input_html => {:rows => 2}
        =f.input :set_list, :as => :hidden, :input_html => {:value => "AGG"}
        =f.button :submit, :class => "aligned"
        = f.hidden_field :energy_system_id, value: @current_res.id
.clear