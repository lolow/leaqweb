.box
  %h2 Shortcut
  .block
    %p
      - unless page == :index
        = link_to 'Browse stored queries', stored_queries_path
        %br
      - unless page == :new
        = link_to 'New stored query', new_stored_query_path
        %br
      - if page == :edit
        = link_to 'Duplicate query', duplicate_stored_query_path, :confirm => 'Are you sure?'
        %br