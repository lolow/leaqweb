.grid_3
  = render :partial => 'shortcuts', :locals => { :page => :index }
.grid_9
  .box
    %h2 Browse stored queries
    %p
      %table(summary="Stored queries list")
        %thead
          %tr
            %th Name
            %th
        %tbody
          - @queries.each do |query|
            %tr
              %td= link_to query.name, edit_query_path(query)
              %td= link_to 'delete', query, :confirm => 'Are you sure?', :method => :delete
.clear