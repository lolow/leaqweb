.grid_12
  .box
    %h2 General parameters
    .block
      = form_tag :controller=> 'etem', :action => 'parameters' do
        %fieldset.login
          %legend ETEM
          %p
            = label_tag :base_year, 'Base year:'
            = text_field_tag :base_year, params[:base_year]
          %p
            = label_tag :nb_periods, 'Number of periods:'
            = text_field_tag :nb_periods, params[:nb_periods]
          %p
            = label_tag :period_length, 'Period duration (years):'
            = text_field_tag :period_length, params[:period_length]
          = submit_tag 'Update', :class => "confirm button"