<% content_for :title, "Edit #{resource_name.to_s.humanize}" %>

<div class="grid_4">
  <div class="box">
    <h2>Actions</h2>
    <div class="block">
      <p>
        <%= render :partial => "shared/devise_links" %>
      </p>
    </div>
  </div>
  <div class="box">
    <h2>Cancel my account</h2>
    <div class="block">
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :confirm => "Are you sure?", :method => :delete %>.</p>
    </div></div>
</div>

<div class="grid_4">
  <div class="box">
    <h2>Information</h2>
    <div class="block">
      <% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
        <%= f.error_messages %>
        <fieldset>
          <p><%= f.label :email, 'Email:' %> <%= f.text_field :email %></p>

          <p><%= f.label :password, 'Password:' %> <%= f.password_field :password %><br/>
            <i>(leave blank if you don't want to change it)</i></p>

          <p><%= f.label :password_confirmation, 'Password (confirmation):' %> <%= f.password_field :password_confirmation %></p>

          <p><%= f.label :current_password, 'Current password:' %> <%= f.password_field :current_password %>
            <br /><i>(we need your current password to confirm your changes)</i></p>

          <p><%= f.submit "Update" %></p>
        </fieldset>
      <% end -%>
    </div>
  </div>

</div>

<div class="clear"></div>




