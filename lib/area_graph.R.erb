library('ggplot2')
library('gdata')
d <- read.table("<%= @query[:input_files].first %>",sep=",",dec=".",h=TRUE)
d <- subset(d,attribute=="<%= @query[:variable] %>")
<% if @query[:filters].size > 0 %>
d <- subset(d,<%= @query[:filters] %>)
<% end %>
d <- drop.levels(d)
d <- cast(d, <%=@query[:rows]%> + <%=@query[:columns]%> ~ ., fun.aggregate=<%=@query[:aggregate]%>, add.missing=TRUE)
colnames(d) <- c("<%=@query[:rows]%>","<%=@query[:columns]%>","<%=@query[:aggregate]%>")
p = ggplot(data=d,aes(x=<%=@query[:columns]%>,y=<%=@query[:aggregate]%>,group=<%=@query[:rows]%>,colour=<%=@query[:rows]%>,fill=<%=@query[:rows]%>))
p = p + geom_area()
#p = p + scale_colour_brewer(palette="Spectral")
#p = p + scale_fill_brewer(palette="Spectral")
p = p + opts(title='<%= @query[:name] %>')
p = p + labs(fill="",x="",y="",colour="")
ggsave(filename = "<%= @query[:result_file] %>",plot=p,device=png,width=1618/2,height=1000/2,dpi=72,scale=1)
